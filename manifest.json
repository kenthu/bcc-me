{
    // Required
    "name": "AlwaysBcc for Gmail",
    "version": "0.1",
    "manifest_version": 2,

    // Recommended
    "description": "Automatically set BCC on all outgoing email",
/*
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
*/

/* need to actually create these icons */

    "background": { "scripts": ["bg/bg.js"] },
    "page_action": {
        "default_title": "AlwaysBcc for Gmail\n(left-click to pause/unpause)\n(right-click for options)"
    },
    "permissions" : ["tabs"],
    "options_page": "options/options.html",
    "content_scripts": [
        {
            "matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
            "css": ["content/content.css"],
            "js": ["content/jquery-1.8.2.min.js", "content/content.js"],
            "all_frames": true
        }
    ]


}
